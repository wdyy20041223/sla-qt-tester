{
    "$comment": "FreeCharts 流程图编辑器 - Disk图标识别测试",
    "$description": "使用 Disk 图标测试模板匹配能力 - Disk 图标区分度强，适合作为基准测试",
    "$resource_base": "../resources/freecharts",
    
    "开始测试": {
        "recognition": "DirectHit",
        "action": "DoNothing",
        "pre_delay": 1500,
        "next": ["等待应用启动"]
    },
    
    "等待应用启动": {
        "recognition": "TemplateMatch",
        "template": ["logo.png"],
        "threshold": [0.5],
        "roi": [0, 0, 1920, 200],
        "timeout": 10000,
        "rate_limit": 500,
        "action": "DoNothing",
        "post_delay": 500,
        "next": ["识别Disk图标"]
    },
    
    "识别Disk图标": {
        "recognition": "TemplateMatch",
        "template": ["NodesIcon/Disk.png"],
        "threshold": [0.5],
        "roi": [0, 50, 220, 800],
        "timeout": 5000,
        "multi_scale": true,
        "scale_range": [0.3, 1.2],
        "scale_step": 0.1,
        "action": "Click",
        "target": true,
        "pre_delay": 300,
        "post_delay": 500,
        "next": ["在画布放置Disk节点"]
    },
    
    "在画布放置Disk节点": {
        "recognition": "DirectHit",
        "action": "Click",
        "target": [600, 300],
        "pre_delay": 200,
        "post_delay": 500,
        "next": ["再次识别Disk"]
    },
    
    "再次识别Disk": {
        "recognition": "TemplateMatch",
        "template": ["NodesIcon/Disk.png"],
        "threshold": [0.5],
        "roi": [0, 50, 220, 800],
        "timeout": 5000,
        "multi_scale": true,
        "scale_range": [0.3, 1.2],
        "scale_step": 0.1,
        "action": "Click",
        "target": true,
        "pre_delay": 300,
        "post_delay": 500,
        "next": ["在画布放置第二个节点"]
    },
    
    "在画布放置第二个节点": {
        "recognition": "DirectHit",
        "action": "Click",
        "target": [600, 500],
        "pre_delay": 200,
        "post_delay": 500,
        "next": ["第三次识别Disk"]
    },
    
    "第三次识别Disk": {
        "recognition": "TemplateMatch",
        "template": ["NodesIcon/Disk.png"],
        "threshold": [0.5],
        "roi": [0, 50, 220, 800],
        "timeout": 5000,
        "multi_scale": true,
        "scale_range": [0.3, 1.2],
        "scale_step": 0.1,
        "action": "Click",
        "target": true,
        "pre_delay": 300,
        "post_delay": 500,
        "next": ["在画布放置第三个节点"]
    },
    
    "在画布放置第三个节点": {
        "recognition": "DirectHit",
        "action": "Click",
        "target": [600, 150],
        "pre_delay": 200,
        "post_delay": 500,
        "next": ["测试完成"]
    },
    
    "测试完成": {
        "recognition": "DirectHit",
        "action": "DoNothing",
        "next": []
    }
}
